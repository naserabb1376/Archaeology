@model Models.customerlist

<div class="bg-gray-100 py-10">
    <div class="mx-auto max-w-7xl">

        <div class="px-4 sm:px-6 lg:px-8">
            <div class="sm:flex sm:items-flex">
                <div class="sm:flex-auto">
                    <h1 class="text-xl font-semibold text-gray-900">کاربران</h1>
                    <p class="mt-2 text-sm text-gray-700">لیست تمامی کاربران پارت اصفهان</p>
                </div>
             @*   <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
                    <a href="/src/adduser.html"
                       class="inline-flex items-center justify-center rounded-md border border-transparent bg-blue-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 sm:w-auto">
                        افزودن کاربر جدید
                    </a>
                </div>*@

            </div>

            <div class="mt-8 flex flex-col">
                <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8 p-4 ">
                    <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8 ">
                        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 rounded-lg ">



                            <!--
                                                    این بخش مربوط به فرم صفحه  افزودن کاربر هست -->

                            <form asp-action="Register" asp-area="Admin" asp-controller="Account" class="py-4 px min-w-full divide-y divide-gray-300 bg-gray-50" method="post" style="padding-bottom:0px">







                                <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6 py-4 px-4">





                                    <div class="sm:col-span-1">
                                        <label for="roleuser"
                                               class="block text-sm font-medium leading-6 text-gray-900">نقش</label>
                                        <div class="mt-2">
                                            <select id="roleuser" asp-items="@Model.RoleList" asp-for="RoleId" required
                                                    class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6">
                                          
                                            </select>
                                        </div>
                                    </div>


                                    <div class="sm:col-span-1">
                                        <label asp-for="FirstName"
                                               class="block text-sm font-medium leading-6 text-gray-900">نام</label>
                                        <div class="mt-2">
                                            <input type="text" asp-for="FirstName" required
                                                   autocomplete="FirstName"
                                                   class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                        </div>
                                    </div>

                                    <div class="sm:col-span-1">
                                        <label asp-for="LastName"
                                               class="block text-sm font-medium leading-6 text-gray-900">
                                            نام
                                            خانوادگی
                                        </label>
                                        <div class="mt-2">
                                            <input type="text" asp-for="LastName" required
                                                   autocomplete="LastName"
                                                   class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                        </div>
                                    </div>


               




                                    <div class="sm:col-span-2">
                                        <label asp-for="Telephone"
                                               class="block text-sm font-medium leading-6 text-gray-900">شماره ثابت</label>
                                        <div class="mt-2">
                                            <input asp-for="Telephone" type="tel" autocomplete="phone-number" required
                                                   class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                        </div>
                                    </div>



                                    <div class="sm:col-span-2">
                                        <label asp-for="UserName"
                                               class="block text-sm font-medium leading-6 text-gray-900">
                                            شماره
                                            همراه
                                        </label>
                                        <div class="mt-2">
                                            <input type="tel" asp-for="UserName" required
                                                   autocomplete="phone-number"
                                                   class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                        </div>
                                    </div>


                                    <div class="sm:col-span-2">
                                        <label asp-for="Password"
                                               class="block text-sm font-medium leading-6 text-gray-900">
                                            رمز عبور
                                            کاربر
                                        </label>
                                        <div class="mt-2">
                                            <input type="password" asp-for="Password" 
                                                   autocomplete="password-user"
                                                   class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                        </div>
                                    </div>



                                    <div class="sm:col-span-2">
                                        <label for="city"
                                               class="block text-sm font-medium leading-6 text-gray-900">شهر</label>
                                        <div class="mt-2">
                                            <input id="city" asp-items="@Model.CityName" asp-for="CityName" required
                                                   class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                            
                                            </input>
                                        </div>
                                    </div>




                                    <div class="sm:col-span-2">
                                        <label asp-for="PostalCode"
                                               class="block text-sm font-medium leading-6 text-gray-900">کدپستی</label>
                                        <div class="mt-2">
                                            <input type="number" asp-for="PostalCode" required
                                                   autocomplete="postal-code"
                                                   class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                        </div>
                                    </div>


                                    <div class="sm:col-span-4">
                                        <label asp-for="Street"
                                               class="block text-sm font-medium leading-6 text-gray-900">
                                            آدرس
                                            کاربر
                                        </label>
                                        <div class="mt-2">
                                            <input type="text" asp-for="Street" required
                                                   autocomplete="street-address"
                                                   class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                        </div>
                                    </div>



                                </div>


                                @Html.HiddenFor(Model=> Model.type)
                                @Html.HiddenFor(Model=> Model.Id)
                               @* <input type="hidden" value="@Model.type"/>*@

                                
                                <div class="mt-6 flex items-center justify-end gap-x-6 px-10 py-3 bg-white overflow-hidden shadow ring-1 ring-black ring-opacity-5 rounded-b-lg">

                   
                                    <button type="submit"
                                            class="overflow-hidden  ring-1 ring-black ring-opacity-5 rounded-lg  px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm hover:bg-green-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600">
                                        ثبت
                                    </button>
                                </div>

                            </form>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>